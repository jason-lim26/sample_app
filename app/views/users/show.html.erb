<!--<%= @user.name %>, <%= @user.email %> <br>-->
<!--Created at: <%= @user.created_at %>, Updated at: <%= @user.updated_at %> <br> -->
<!--Current Time <%= Time.now %>-->

<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>    
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
    <!-- The count method performs the calculation directly in the database, 
         asking the database to count the microposts with the given user_id -->
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <!-- <ol></ol> means ordered list here -->
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
